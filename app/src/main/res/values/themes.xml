<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.VoiceRecorder" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/md_theme_primary</item>
        <item name="android:colorSecondary">@color/md_theme_secondary</item>
        <item name="android:colorError">@color/md_theme_error</item>
        <item name="android:colorBackground">@color/md_theme_background</item>
    </style>

    <style name="Theme.VoiceRecorder.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.VoiceRecorder.AppWidgetContainer" parent="Theme.VoiceRecorder.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>